{
  "name": "portal-cms",
  "// version": "undefined",
  "// license": "undefined",
  "description": "The master CMS codebase for all downstream TACC stand alone CMS sites.",
  "scripts": {
    "build": "npm run build:css",
    "build:css": "postcss \"src/styles/exports/**/*.css\" --base src/styles/exports --dir build/css",
    "watch": "npm-watch"
  },
  "// scripts": {
    "build:css": "Compile files locally, to be committed to repo (quote glob to prevent OS parse)",
    "build:css // SEE": "https://github.com/postcss/postcss-cli/issues/142#issuecomment-310681302",
    "watch": "Compile files when they change",
    "watch // NOTE": "The macOS operating system requires object-based conifguration",
    "watch // NOTE // SEE": "https://github.com/M-Zuber/npm-watch/issues/35"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.tacc.utexas.edu:wma-cms/cms-site-template.git"
  },
  "devDependencies": {
    "cssnano": "^4.1.10",
    "npm-watch": "^0.6.0",
    "postcss-cli": "^7.1.0",
    "postcss-import": "^12.0.1"
  },
  "postcss": {
    "plugins": {
      "postcss-import": {
        "path": "./"
      },
      "cssnano": {
        "preset": "default"
      }
    }
  },
  "watch": {
    "build:css": {
      "patterns": ["src/styles"],
      "extensions": "css",
      "runOnChangeOnly": false
    }
  }
}
