{
    "name": "portal-cms",
    "version": "0.0.0",
    "license": "MIT",
    "description": "The master CMS codebase for all downstream TACC stand alone CMS sites.",
    "scripts": {
        "build": "npm run build:css",
        "build:css": "node postcss.js",
        "watch": "npm-watch"
    },
    "// scripts": {
        "build": "Run all static file build commands",
        "build:css": "Build stylesheets from source files",
        "watch": "Build static files when source files change"
    },
    "repository": "git@gitlab.tacc.utexas.edu:wma-cms/cms-site-template.git",
    "devDependencies": {
        "async": "^3.2.0",
        "cssnano": "^4.1.10",
        "dotenv": "^8.2.0",
        "npm-watch": "^0.7.0",
        "postcss-cli": "^7.1.2",
        "postcss-import": "^12.0.1",
        "yarn": "^1.22.5"
    },
    "watch": {
        "build:css": {
            "patterns": [
                "./taccsite_cms/static/site_cms/styles"
            ],
            "extensions": "css",
            "runOnChangeOnly": false
        }
    },
    "// watch": {
        "build:css": "macOS requires object-based conifguration",
        "build:css // SEE": "https://github.com/M-Zuber/npm-watch/issues/35"
    },
    "resolutions": {
        "dot-prop": ">=5.2.0"
    },
    "author": "TACC ACI WMA <wma-portals@gmail.com>"
}
